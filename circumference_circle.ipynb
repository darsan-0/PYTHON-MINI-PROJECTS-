    "# circumference\n",
    "# C=2πr\n",
    "import math\n",
    "r = int(input(\"Enter you're radius of circle:\"))\n",
    "C = 2 * math.pi * r\n",
    "print(f\"The circumference of the circle is: {C:.2f}\")"
